{
"query":
    {
	"bool": {
		"must": [
			{
				"range": {
					"minimum_age": {
						"lte": {{age}}
					}
				}
			},
			{
				"range": {
					"maximum_age": {
						"gte": {{age}}
					}
				}
			},
			{
				"match": {
					"sex": "{{sex}}"
				}
			}
		],
		"should": [
			{
				"multi_match": {
					"query": "{{disease}}",
					"fields": [
						"title^2",
						"official_title",
						"summary",
						"detailed_description",
						"condition",
                        "keyword^2"
					],
					"tie_breaker": 0.3,
					"type": "best_fields",
					"boost": 2
				}
			},
			{
				"multi_match": {
					"query": "{{gene}}",
					"fields": [
						"title^2",
						"summary",
						"detailed_description",
						"inclusion"
					],
					"tie_breaker": 0.3,
					"type": "best_fields",
					"boost": 1
				}
			}
		]
	}
}

}
