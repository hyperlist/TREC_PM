{
"query":
    {
	"bool": {
		"must": [
            {
				"range": {
					"minimum_age": {
						"lte": {{age}}
					}
				}
			},
			{
				"range": {
					"maximum_age": {
						"gte": {{age}}
					}
				}
			},
			{
				"match": {
					"sex": "{{sex}}"
				}
			},
            {
                "multi_match": {
                    "query": "{{disease}}",
                    "fields": [
                            "title",
                            "official_title",
                            "summary",
                            "detailed_description",
                            "condition",
                            "mesh_term",
                            "keyword"
                    ],
                    "tie_breaker": 0.3,
                    "type": "best_fields",
                    "boost": 1
                }
            }
			
		],
		"should": [
			{
				"multi_match": {
					"query": "{{gene}}",
					"fields": [
						"title",
						"official_title",
						"summary",
						"detailed_description",
						"inclusion"
					],
					"tie_breaker": 0.3,
					"type": "best_fields",
                    "boost": 2
				}
			}
		]
	}
}
}
